{
    "manifest_version": 2,
    "name": "Core Protect",
    "version": "1.0",

    "description": "Pre-screen Ethereum transactions to detect scams before they happen.",

    "icons": {
        "48": "icons/icon-48.png"
    },

    "browser_action": {
        "default_icon": {
            "38": "icons/icon-48.png"
        },
        "default_title": "Core Protect",
        "default_popup": "popup/app.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_scripts/inject.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": ["background_script.js"]
    },
    "permissions": ["webRequest", "scripting", "tabs"],
    "web_accessible_resources" : [
        "content_scripts/*"
    ]
}

