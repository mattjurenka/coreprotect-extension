{
    "manifest_version": 3,
    "name": "Core Protect",
    "version": "1.0",

    "description": "Pre-screen Ethereum transactions to detect scams before they happen.",

    "icons": {
        "48": "icons/icon-48.png"
    },

    "action": {
        "default_icon": {
            "38": "icons/icon-48.png"
        },
        "default_title": "Core Protect",
        "default_popup": "popup/app.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_scripts/inject.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": ["storage"],
    "web_accessible_resources" : [
      {
        "resources": ["content_scripts/*"],
        "matches": ["<all_urls>"]
      }
    ]
}

